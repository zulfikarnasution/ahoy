<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/poltekpos"
    fab:context=".TampilanUtama">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tugas Besar Mobile Programing"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Andri Fajar Sunandhar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv1"
        android:textSize="10dp"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mhd.Zulfikar Akram Nasution"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv2"
        android:textSize="10dp"/>

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btn1"
    android:onClick="klik1"
    android:layout_below="@id/tv1"
    android:text="Mahasiswa"
    android:layout_marginTop="80dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:onClick="klik3"
        android:layout_below="@id/btn1"
        android:text="Dosen"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:onClick="klik2"
        android:layout_below="@id/btn3"
        android:text="Jadwal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>





</RelativeLayout>